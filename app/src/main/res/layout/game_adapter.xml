<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewHome.GameAdapter">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fefefe"
        app:cardUseCompatPadding="true"
        android:clipChildren="false"
        android:orientation="vertical"
        app:cardElevation="6dp"
        android:elevation="6dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4caf50"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="384dp"
                    android:layout_height="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvGameName"
                        android:layout_width="184dp"
                        android:layout_height="match_parent"
                        android:background="#4caf50"
                        android:text="JoÃ£o Pereira"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />"

                    <TextView
                        android:id="@+id/tvHighScore"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:background="#4caf50"
                        android:text="High score: "
                        android:paddingEnd="8dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgViewGame"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tetris_launch_app"
                    android:background="#4caf50"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#80e27e"
                        android:elevation="6dp"
                        android:src="@mipmap/ic_play_3_foreground" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="142dp"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:backgroundTint="#80e27e"
                        android:elevation="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ranking" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>