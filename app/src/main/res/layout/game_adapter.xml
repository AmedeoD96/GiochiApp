<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="716dp"
        app:cardBackgroundColor="@color/greenLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:translationY="100dp"
            app:srcCompat="@drawable/tetris_launch_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical">

            <!--   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="133dp"
                    android:layout_height="56dp"
                    android:text="@string/score"
                    android:textSize="24sp"
                    android:translationX="300dp"
                    android:translationY="30dp" />

                <TextView
                    android:id="@+id/highscore"
                    android:layout_width="133dp"
                    android:layout_height="56dp"
                    android:text="@string/highScore"
                    android:textSize="24sp"
                    android:translationX="15dp"
                    android:translationY="80dp" />
            </LinearLayout> -->


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play"
                android:layout_width="115dp"
                android:layout_height="121dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:scaleType="fitCenter"
                android:translationX="145dp"
                android:translationY="320dp"
                app:backgroundTint="@android:color/transparent"
                app:elevation="8dp"
                app:fabCustomSize="115dp"
                app:fabSize="normal"
                app:maxImageSize="140dp"
                app:srcCompat="@drawable/play" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:translationY="325dp">


                <ImageView
                    android:id="@+id/left"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:translationX="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/freccia_flop" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/freccia_flip" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="221dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="3dp"
                    android:text="Title "
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/right"
                    app:layout_constraintStart_toEndOf="@+id/left" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:translationY="330dp">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/score"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageButton
                android:id="@+id/leaderboard"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:backgroundTint="@color/lightgreen"
                android:elevation="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ranking"
                android:translationY="350dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>